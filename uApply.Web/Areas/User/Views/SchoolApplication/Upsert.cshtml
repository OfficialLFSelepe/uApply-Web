@model uApply.Utils.ViewModels.EducationVM.SchoolApplicationViewModel
@{
    
}

 <div class="container">

         <div class="card shadow my-3">
            <div class="card-header py-3">
                <p class="text-center text-dark m-0 font-weight-bold">Learner Applicaation</p>
            </div>
            <form  method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="SchoolApplication.Id"  />     
                    <input type="hidden" asp-for="SchoolApplication.LearnerId"  />     
                    <input type="hidden" asp-for="ParentId"  />     
                     
                                    
                    <div class="form-row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="SchoolApplication.School" class="text-muted"></label>
                                  @Html.DropDownListFor( c => c.SchoolApplication.SchoolId, Model.Schools, "-- Select School --",
                                    new {@class = "form-control"})                                
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid zip.
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="SchoolApplication.Grade" class="text-muted"></label>
                                @Html.DropDownListFor( c => c.SchoolApplication.GradeId, Model.Grades, "-- Select Grade --",
                                    new {@class = "form-control"})
                            </div>
                        </div>                        
                    </div>                
                                                                           
                <!-- Card Footer -->
                <div class="card-footer m-0">
                    <button type="submit" class="btn btn-dark btn-block"><i class="fa fa-user-plus"></i> Apply</button>
                </div>
                </div>
             </form>
        </div>
        
    </div>

